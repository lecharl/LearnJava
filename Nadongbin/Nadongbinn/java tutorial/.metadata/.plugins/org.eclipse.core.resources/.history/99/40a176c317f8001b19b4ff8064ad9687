import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		// 입력받아 공백 역직각삼각형 만들기
		
		Scanner line = new Scanner(System.in);
		
		System.out.println("몇 줄을 입력할까요?");
		int N = line.nextInt();
		
		for(int i = N; i > 0; i--)
		{
			for(int j = 0; j < i; j++)
			{
				for(int ln = 0; ln < j; ln++)
				{
					System.out.print("*");
				}
				System.out.print(" ");
			}
			System.out.println();
		}
		
		line.close();
	}

}
